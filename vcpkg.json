{
  "dependencies": [
    {
      "name": "lua",
      "features": [
        "tools"
      ]
    },
    "sdl2",
    "luafilesystem",
    "lpeg"
  ],
  "features": {
    "audio": {
      "description": "In game audio support",
      "dependencies": [
         {
           "name": "fluidsynth",
           "platform": "!osx",
           "features": [
             "sndfile"
           ]
        },
        {
          "name": "sdl2-mixer",
          "features": [
            "libmodplug",
            {
              "name": "fluidsynth",
              "platform": "!osx"
            },
            "libflac",
            "mpg123",
            "opusfile"
          ]
        }
      ]
    },
    "animview": {
      "description": "Support building AnimView",
      "dependencies": [
        "wxwidgets"
      ]
    },
    "updatecheck": {
      "description": "Support checking for game updates",
      "dependencies": [
        {
          "name": "curl",
          "default-features": false,
          "features": [
            "ssl"
          ]
        }
      ]
    },
    "movies": {
      "description": "In game video support",
      "dependencies": [
        {
          "name": "ffmpeg",
          "default-features": false,
          "features": [
            "avcodec",
            "avformat",
            "swresample",
            "swscale"
          ]
        }
      ]
    },
    "freetype": {
      "description": "In game freetype font support",
      "dependencies": [
        "freetype"
      ]
    },
    "catch2": {
      "description": "Support Catch2 tests",
      "dependencies": [
        "catch2"
      ]
    }
  },
  "overrides": [
    { "name": "sdl2", "version": "2.28.2" }
  ]
}
